<style>
  .login-title {
    overflow: hidden;              /* Hide the overflow */
    white-space: nowrap;           /* Keep text in one line */
    border-right: 2px solid #000;  /* Simulate the blinking cursor */
    width: 0;
    animation: typing 1.5s steps(10, end) forwards, blink 0.75s step-end 2, fadeCursor 0.5s ease 2s forwards;  }

  @keyframes typing {
    from { width: 0; }
    to { width: 100%; }
  }

  @keyframes blink {
    from, to { border-color: transparent; }
    50% { border-color: black; }
  }

  @keyframes fadeCursor {
    to {
      border-right: 0;
      border-right-color: transparent;
    }
  }
</style>
<div class="login-page min-vh-100 d-flex align-items-center justify-content-center" style="background-color:rgb(48, 47, 47);">
  <div class="card bg-light text-dark p-4" style="min-width: 350px;">
<h2 class="text-center mb-4 login-title">Log In</h2> 

    <%= form_with url: login_path, method: :post, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control", required: true %>
      </div>

      <div class="d-grid">
        <%= form.submit "Log In", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>