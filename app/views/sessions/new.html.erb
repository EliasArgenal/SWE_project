<!-- app/views/sessions/new.html.erb -->
<h1>Login</h1>
<%= form_with url: login_path, local: true do |form| %>
  <div>
    <%= form.label :email, "Email" %>
    <%= form.text_field :email, name: "email" %>
  </div>

  <div>
    <%= form.label :password, "Password" %>
    <%= form.password_field :password, name: "password" %>
  </div>

  <div>
    <%= form.submit "Login" %>
  </div>
<% end %>
